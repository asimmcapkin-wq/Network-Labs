configure terminal
hostname IspR

! Arayüz IP ve NAT Tanımlamaları
interface Ethernet0/0
 ip address 10.0.0.2 255.255.255.0
 ip nat inside
 no shutdown
exit

interface Ethernet0/1
 ip address dhcp
 ip nat outside
 no shutdown
exit

interface Ethernet0/2
 ip address 50.0.0.2 255.255.255.0
 ip nat inside
 no shutdown
exit

interface Ethernet0/3
 ip address 20.0.0.2 255.255.255.0
 ip nat inside
 no shutdown
exit

interface Ethernet1/0
 ip address 50.0.1.254 255.255.255.0
 ip nat inside
 ip ospf mtu-ignore
 no shutdown
exit

! OSPF Dinamik Yönlendirme
router ospf 1
 router-id 5.5.5.5
 network 10.0.0.0 0.0.0.255 area 0
 network 20.0.0.0 0.0.0.255 area 0
 network 50.0.0.0 0.0.0.255 area 0
 network 50.0.1.0 0.0.0.255 area 0
 default-information originate
exit

! NAT (PAT) Yapılandırması
access-list 1 permit any
ip nat inside source list 1 interface Ethernet0/1 overload

end
write memory
