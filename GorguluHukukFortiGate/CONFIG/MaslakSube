! Arayüz IP ve Erişim Ayarları
config system interface
    edit "port1"
        set ip 50.0.0.1 255.255.255.0
        set allowaccess ping
    next
    edit "port2"
        set ip 60.0.0.1 255.255.255.0
        set allowaccess ping
    next
end

! OSPF Dinamik Yönlendirme ve MTU Ayarı
config router ospf
    set router-id 3.3.3.3
    config area
        edit 0.0.0.0
        next
    end
    config network
        edit 1
            set prefix 50.0.0.0 255.255.255.0
        next
        edit 2
            set prefix 60.0.0.0 255.255.255.0
        next
    end
    config ospf-interface
        edit "port1"
            set interface "port1"
            set mtu-ignore enable
        next
    end
end

! Güvenlik Duvarı İzin Kuralı
config firewall policy
    edit 0
        set name "Allow_All_Lab"
        set srcintf "any"
        set dstintf "any"
        set srcaddr "all"
        set dstaddr "all"
        set action accept
        set schedule "always"
        set service "ALL"
    next
end
